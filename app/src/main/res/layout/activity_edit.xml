<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.powerstation.texteditor.Edit">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backBtn"
            android:id="@+id/backBtn"
            android:onClick="goToFirstScreen"

            android:layout_gravity="left|bottom"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/saveBtn"
            android:layout_toStartOf="@+id/saveBtn"
            android:layout_marginRight="49dp"
            android:layout_marginEnd="49dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveBtn"
            android:id="@+id/saveBtn"

            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/editText"
            android:layout_alignEnd="@+id/editText"
            android:layout_marginRight="53dp"
            android:layout_marginEnd="53dp" />

        <EditText
            android:layout_width="291dp"
            android:layout_height="344dp"
            android:id="@+id/editText"
            android:inputType="text|textMultiLine|textCapSentences"
            android:background="#d7d2d2"
            android:textStyle="bold"
            android:theme="@style/AppTheme"
            android:minLines="6"
            android:maxLines="10"
            android:lines="8"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/backBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
